<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">

  <schema id="org.gnome.shell.extensions.sshtunnel" path="/org/gnome/shell/extensions/sshtunnel/">
    <key type="as" name="tunnels">
      <default>[]</default>
      <summary>Tunnel list</summary>
      <description>A list of Tunnels</description>
    </key>

    <key type="b" name="show-settings">
      <default>true</default>
      <summary>Show the add services button</summary>
      <description>Whether to show the settings button as last entry in the extensions list.</description>
    </key>

    <key type="i" name="refresh-time">
      <default>10</default>
      <summary>Wait to next refresh</summary>
      <description>How long to wait for next refresh.</description>
    </key>

    </schema>
</schemalist>
